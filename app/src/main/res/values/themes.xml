<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/sheet_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance3dp">
        <item name="cornerSize">2dp</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ReelsCountTextStyle" parent="TextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">0.1dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:letterSpacing">0.05</item>

    </style>


    <style name="TextViewGreyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextViewLightTransparentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextViewBoldStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MaterialButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>



    <style name="MaterialButtonRoundStrokeStyle" parent="MaterialButtonStyle">
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="MaterialButtonRoundStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>


    <style name="MaterialButtonWithWhiteStroke" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="TextViewLightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/edittext_bg_stroke</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>


    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="CommentEditTextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/comment_edittext_bg</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:hint">@string/say_something</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="LineSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@color/placeholder_color</item>
    </style>

    <style name="CloseIconStyle">
        <item name="android:layout_width">@dimen/close_icon_size</item>
        <item name="android:layout_height">@dimen/close_icon_size</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="tint">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/ic_close</item>
    </style>


    <style name="UploadProgressStyle" parent="Widget.Material3.LinearProgressIndicator">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:progress">0</item>
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@color/placeholder_color</item>
        <item name="trackCornerRadius">10dp</item>
        <item name="trackThickness">3.5dp</item>
    </style>


    <style name="TextViewColoredStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="ProfileEditTextStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/edittext_bg_stroke</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>

    <style name="EditTextDescStyle" parent="ProfileEditTextStyle">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:maxLines">4</item>
        <item name="android:lines">3</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">top|start</item>
        <item name="android:drawableEnd">@drawable/ic_edit_pencil</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:overScrollMode">always</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="TabStyle">
        <item name="tabTextColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <dimen name="button_text_size">14dp</dimen>
    <dimen name="button_height">45dp</dimen>
</resources>